      SUBROUTINE VSEPAR(RPULS,NSTRP,PHCUT,NCLU,ISTRT,NSCLU)
d14 6
d21 1
a21 1
C!             NSTRP = Number of strips in array
d33 36
a68 9
#include "implicit.h"
#include "vdimpl.h"
C
      INTEGER MAXSTR
      PARAMETER (MAXSTR = 50)
      REAL RPULS(*),PHCUT,AVEPH
      INTEGER ISTRP,JSTRP,KSTRP,NSEP,NSTRP,NCLU,ISTRT(*),NSCLU(*)
      INTEGER INDEX(MAXSTR),ISEED(3,MAXSTR)
      INTEGER IEDGE,ICLU,JCLU,IMIN,IIII,IDIF
d70 5
d79 6
d88 1
a88 1
      IF(NSTRP .GT. MAXSTR)THEN
d92 4
d209 5
d219 9
@



text
@d2 1
a2 1
      SUBROUTINE VLCPOS(RPULS,NSTRP,PHCUT,POS,PSUM,NPOS)
d11 7
a27 2
#include "implicit.h"
#include "vdimpl.h"
d30 3
a32 1
      REAL RPULS(*),POS,PHCUT,PSUM,POS_PSUM
d34 3
a36 1
      INTEGER NPOS,NSTRP,INDEX(MAXSTR),IEDGE(2)
d39 8
d54 7
d115 1
a115 1
      POS_PSUM = 0.0
d117 1
a117 1
        POS_PSUM = POS_PSUM + RPULS(ISTRP)
d123 1
a123 1
      POS = POS/POS_PSUM
@



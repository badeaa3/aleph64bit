1.3
log
@galeph309_3 - check ADBS version no and last event during production
@
text
@*DK cagerb
      SUBROUTINE CAGERB(ENER,IFIN,XGERB,NRJDP)
C
C     Deposition of electromagnetic energy in ECAL
C     J.Badier  10/03/88
C     ENER  : electromagnetic energy to be deposited
C     IFIN  : 0  no more points to be generated
C     IFIN  : 1  points have to be generated to deposit
C                energy
C     XGERB : coordinate of generated points
C     NRDJ  : energy deposited by generated point
C     calls to   CASHEM ,POISSN , EHTRTI  ,EHDEPS
C     called from EHSHOW
C======================================================
#ifndef DOC
      SAVE
      DIMENSION XGERB(*)
#include "alcons.h"
#include "iocom.h"
#include "ehpash.h"
#include "gcmate.h"
#include "capano.h"
#include "trkcom.h"
#include "ehcond.h"
      NRJDP = 0
      IF( IFIN .EQ. 0 ) THEN
         IF( ENER .LT. . 001) GO TO 30
         IFIN = 1
C ----- Initialisation
C ----- Angle avec le module.
         CSTE = ABS( TRKELE(6) )
         CSTE = MAX ( . 01, CSTE )
         CSTE = MIN ( .99995, CSTE)
         TGTE = SQRT( 1. / CSTE **  2- 1. )
         IF (ABS(TRKELE(3)).LT.EZMAX) TGTE =1./TGTE
C ----- Limits for generation.
         DELT = ERMAX*TGTE/GRADL
         SMIN = TINOX0 - DELT * TRKELE(9) - TRKELE(11) / GRADL
         SMAX = TINOX0 + DELT * TRKNXT(9)
C ----- Test medium type
         IF( ( EMNAME(1:2) .EQ. 'EC'    .AND.
     +         TRKVOL(1:2) .EQ. 'ED' )  .OR.
     +       ( EMNAME(1:2) .EQ. 'ED'    .AND.
     +         TRKVOL(1:2) .EQ. 'EC' ) )      THEN
           IF ( SMIN.LT.SMAXLR ) SMIN = SMAXLR
           IF ( SMAX.LT.SMAXLR ) SMAX = SMAXLR
         ENDIF
         SMAXLR = SMAX
         EMNAME = TRKVOL
C ----- Integration step.
         DDS = . 5 * EDSELM
         TDS = ETANG * EDSELM
C ----- Number of steps.
         ISTP = ( SMAX - SMIN ) / EDSELM
         ISTP = ISTP + 1
C ----- Number of points per rad. len.
         CNRJ = PARGV1 * DDS
C ----- First step initialisation.
         S1 = SMIN - EDSELM
         S2 = SMIN
         NPT = 0
         INIT = 0
      ELSE
C ----- Points generation.
    1    CONTINUE
         IF( NPT .EQ.  0) THEN
   10       CONTINUE
            IF( ISTP .EQ.  0) GO TO 30
            ISTP = ISTP - 1
            S1 = S2
            S2 = S1 + EDSELM
C ----- Number of points for this step.
C   TDS used for an integration with two points.
            SP1 = S1 + TDS
C   CASHEM is the normalised distribution.
            F1 = CASHEM( SP1 , INIT )
            INIT = 1
            SP2 = S2 - TDS
            F2 = CASHEM( SP2 , INIT )
            EF = CNRJ * ( F1 + F2 )
            CALL POISSN( EF , NPT , IER )
            IF( NPT .EQ.  0) GO TO 10
            RHO = F1 / ( F1 + F2 )
            RH1 = DDS / RHO
            RHO = MIN (RHO , .999)
            RH2 = DDS / ( 1. - RHO )
         ENDIF
         ALEA = RNDM(ALEA)
         IF( ALEA .LT. RHO ) THEN
            ST = S1 + RH1 * ALEA
         ELSE
            ST = S2 - RH2 * ( 1. - ALEA )
         ENDIF
         NPT = NPT - 1
      IF( ST .GT. SMAX ) GO TO 1
         XGERB(1) = ( ST - TINOX0 ) * GRADL
         DGRB = XGERB(1) + TRKNXT(9)
C ----- Radial.
         CALL EHTRTI( DGRB , RAD )
         IF (RAD.GT.0.) THEN
            PHI = TWOPI * RNDM(RAD)
            XGERB(2) = RAD * COS(PHI)
            XGERB(3) = RAD * SIN(PHI)
         ELSE
            XGERB(2) = 0.
            XGERB(3) = 0.
         ENDIF
C ----- Energie deposee.
         CALL EHDEPS(NRJDP)
C
      ENDIF
   20 CONTINUE
      RETURN
C ----- Plus de points!
   30 CONTINUE
      IFIN = 0
      GO TO 20
      END
#endif
@


1.2
log
